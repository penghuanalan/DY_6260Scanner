<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_sample_dateil"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_channel"
            android:text="通道"
            android:textSize="@dimen/TextSizeMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="样品 "
                android:textSize="@dimen/commomTextSize"
                android:layout_height="wrap_content" />
            <EditText
                android:paddingLeft="@dimen/commonSpace"
                android:id="@+id/et_sample_name"
                android:hint="样品名称"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="编号 "
                android:textSize="@dimen/commomTextSize"
                android:layout_height="wrap_content" />
            <EditText
                android:paddingLeft="@dimen/commonSpace"
                android:id="@+id/et_sample_num"
                android:hint="样品编号"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
<FrameLayout
    android:visibility="gone"
    android:id="@+id/fl_detect_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
</RelativeLayout>